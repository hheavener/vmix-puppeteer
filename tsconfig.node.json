{
  "extends": "@tsconfig/node20/tsconfig.json",
  "include": [
    "src/global/global.d.ts",
    "src/global/init.ts",
    "forge.env.*",
    "vite.config.*",
    "vite.*.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*"
  ],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",

    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"]
  }
}
